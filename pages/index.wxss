/* index.wxss */

/* 容器样式 */
.container {
  padding: 20px;
}

/* 用户信息样式 */
.userinfo {
  display: flex;
  align-items: center;
}

.userinfo-avatar {
  width: 64px;
  height: 64px;
  border-radius: 50%;
  margin-right: 10px;
}

.userinfo-nickname {
  font-size: 20px;
}

/* 分区样式 */
.section {
  margin-top: 20px;
}

/* 表单项样式 */
.form-item {
  margin-bottom: 10px;
}

label {
  display: block;
  margin-bottom: 5px;
  font-weight: bold;
}

input {
  width: 100%;
  padding: 8px;
  border: 1px solid #ddd;
  border-radius: 4px;
  box-sizing: border-box;
}
