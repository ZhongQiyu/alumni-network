.container {
  padding: 20px;
}

.userinfo {
  display: flex;
  align-items: center;
}

.userinfo-avatar {
  width: 64px;
  height: 64px;
  border-radius: 50%;
  margin-right: 10px;
}

.userinfo-nickname {
  font-size: 20px;
}

.alumni-card {
  margin-top: 20px;
}

.alumni-card-content {
  background-color: #4CAF50;
  color: white;
  padding: 20px;
  text-align: center;
  border-radius: 5px;
}

button {
  background-color: #4CAF50;
  color: white;
  border: none;
  padding: 10px;
  cursor: pointer;
  border-radius: 5px;
  margin-top: 10px;
}

button:hover {
  background-color: #45a049;
}

.survey-form {
  margin-top: 20px;
}

.form-item {
  margin-bottom: 10px;
}

label {
  display: block;
  margin-bottom: 5px;
}

input {
  width: 100%;
  padding: 8px;
  border: 1px solid #ddd;
  border-radius: 4px;
}
