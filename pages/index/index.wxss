.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f5f5f5;
}

.header {
  width: 100%;
  padding: 20rpx;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
}

.profile-pic {
  width: 100rpx;
  height: 100rpx;
  background-color: #d9d9d9;
  border-radius: 50%;
}

.login-text {
  margin-top: 20rpx;
  font-size: 30rpx;
  color: #333333;
}

.card {
  width: 90%;
  background-color: #2f9e44;
  border-radius: 20rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.club-info {
  color: #ffffff;
}

.club-name {
  font-size: 36rpx;
}

.club-subname {
  font-size: 26rpx;
  margin-top: 10rpx;
}

.claim-btn {
  background-color: #ffffff;
  color: #2f9e44;
  padding: 10rpx 30rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
}

.contact-info {
  width: 90%;
  margin-top: 40rpx;
  background-color: #ffffff;
  padding: 20rpx;
  border-radius: 20rpx;
}

.contact-text {
  font-size: 28rpx;
  color: #333333;
}

.contact-detail {
  font-size: 28rpx;
  color: #333333;
  margin-top: 10rpx;
  word-wrap: break-word;
}

.footer {
  width: 100%;
  background-color: #ffffff;
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
  position: fixed;
  bottom: 0;
}

.footer-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.icon {
  width: 50rpx;
  height: 50rpx;
}

.footer-item text {
  margin-top: 10rpx;
  font-size: 28rpx;
  color: #333333;
}
