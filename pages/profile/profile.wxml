<view class="container">
  <view class="header">
    <text class="header-title">个人中心</text>
  </view>
  
  <view class="user-info">
    <image class="user-avatar" src="/images/default_avatar.png" />
    <text class="login-text">点击登录账号</text>
  </view>

  <view class="card-container">
    <view class="card">
      <text class="card-title">百森俱乐部校友卡</text>
      <text class="card-subtitle">Babson China Club</text>
      <button class="get-card-btn">立即领取</button>
