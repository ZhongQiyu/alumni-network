  </view>
  
  <view class="contact-info">
    <text>校友会联系方式：</text>
    <text class="contact-text">XXXXXXXXXXXXXXXX</text>
  </view>

  <view class="footer">
    <navigator url="/pages/index/index" class="footer-item">
      <image src="/images/home.png" />
      <text>首页</text>
    </navigator>
    <navigator url="/pages/organization/organization" class="footer-item">
      <image src="/images/organization.png" />
      <text>组织</text>
    </navigator>
    <navigator url="/pages/profile/profile" class="footer-item selected">
      <image src="/images/profile.png" />
      <text>我的</text>
    </navigator>
  </view>
</view>
