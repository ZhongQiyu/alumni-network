.container {
  padding: 20px;
  background-color: #f5f5f5;
}

.header {
  text-align: center;
  margin-bottom: 20px;
}

.header-title {
  font-size: 18px;
  color: #33a84e;
  font-weight: bold;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 20px;
}

.user-avatar {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  margin-right: 10px;
}

.login-text {
  font-size: 16px;
  color: #333;
}

.card-container {
  margin-bottom: 20px;
}

.card {
  background-color: #33a84e;
  padding: 20px;
  border-radius: 10px;
  text-align: center;
}

.card-title {
  font-size: 16px;
  color: white;
  margin-bottom: 5px;
}

.card-subtitle {
  font-size: 14px;
  color: white;
  margin-bottom: 15px;
}

.get-card-btn {
  background-color: white;
  color: #33a84e;
  border-radius: 5px;
  padding: 10px 20px;
  font-size: 14px;
}

.contact-info {
  font-size: 14px;
  color: #333;
}

.contact-text {
  font-weight: bold;
}

.footer {
  display: flex;
  justify-content: space-around;
  background-color: white;
  padding: 10px 0;
  border-top: 1px solid #e5e5e5;
}

.footer-item {
  text-align: center;
}

.footer-item.selected text {
  color: #33a84e;
}
