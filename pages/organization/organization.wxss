/* Container for the entire page */
.container {
  padding: 20px;
  background-color: #f4f4f4;
  min-height: 100vh;
}

/* Header styling */
.page-header {
  text-align: center;
  margin-bottom: 20px;
}

.page-header image {
  width: 80%;
  max-width: 300px;
  height: auto;
}

/* Content area styling */
.page-content {
  background-color: #ffffff;
  padding: 15px;
  border-radius: 10px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.page-content text {
  font-size: 16px;
  line-height: 1.6;
  color: #333;
}

/* Add some spacing at the bottom */
.container::after {
  content: '';
  display: block;
  height: 50px;
}
